
    <section class="large-photo">
        <div class="row">
          {% if section.settings.bottom_image != blank %}
          <div class="lg-bg" style="background: url({{section.settings.bottom_image | img_url: '1200x'}}); background-size: cover;
          background-position: center center;">
          </div>
          {% else %}
          <div class="lg-bg" style="background: url({{"shoes.jpg" | asset_url}}); background-size: cover;
          background-position: center center;">
          </div>
          {% endif %}
           
        </div>
    </section>

    {% schema %}
    {
        "name": "Large Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "bottom_image",
            "label": "Image"
          }
        ],
        "presets": [
        {
          "name":"Large Image",
          "category": "Image"
        }
      ]
    }
    {% endschema %}