{%- assign collection1 = collections[section.settings.collection1] -%}
{%- assign collection2 = collections[section.settings.collection2] -%}
{%- assign collection3 = collections[section.settings.collection3] -%}
{%- assign collection4 = collections[section.settings.collection4] -%}

    <section class="featured-collections">
        <div class="row">
            <div class="col collection-title">
                <h2 style="color: {{section.settings.header_color}};">{{section.settings.header_text}}</h2>
                <p style="color: {{section.settings.sub_color}};">{{section.settings.sub_text}}</p>
            </div>
        </div> 
        <div class="row product-list">
            <div class="col">
              {% if section.settings.collection1 != blank %}
              <a href="{{collection1.url}}"><img src={{collection1.image  | img_url: 'medium'}}/> 
              </a>
              <a style="color: {{section.settings.link_color}};" href="{{collection1.url}}">{{collection1.title}}</a>
              {% else %}
              <img src={{"no_img.jpg"| asset_url }}/> 
              <a style="color: {{section.settings.link_color}};" href="{{collection1.url}}">Collection Name</a>
              {% endif %}
            </div>
            <div class="col">
              {% if section.settings.collection2 != blank %}
              <a href="{{collection2.url}}"><img src={{collection2.image  | img_url: 'medium'}}/> 
              </a>
              <a style="color: {{section.settings.link_color}};" href="{{collection2.url}}">{{collection2.title}}</a>
              {% else %}
              <img src={{"no_img.jpg"| asset_url }}/> 
              <a style="color: {{section.settings.link_color}};" href="{{collection2.url}}">Collection Name</a>
              {% endif %}
            </div>
            <div class="col">
              {% if section.settings.collection3 != blank %}
              <a href="{{collection3.url}}"><img src={{collection3.image  | img_url: 'medium'}}/> 
              </a>
              <a style="color: {{section.settings.link_color}};" href="{{collection3.url}}">{{collection3.title}}</a>
              {% else %}
              <img src={{"no_img.jpg"| asset_url }}/> 
              <a style="color: {{section.settings.link_color}};" href="{{collection3.url}}">Collection Name</a>
              {% endif %}
            </div>
            <div class="col">
              {% if section.settings.collection4 != blank %}
              <a href="{{collection4.url}}"><img src={{collection4.image  | img_url: 'medium'}}/> 
              </a>
              <a style="color: {{section.settings.link_color}};" href="{{collection4.url}}">{{collection4.title}}</a>
              {% else %}
              <img src={{"no_img.jpg"| asset_url }}/> 
              <a style="color: {{section.settings.link_color}};" href="{{collection4.url}}">Collection Name</a>
              {% endif %}
            </div>
        </div>
    </section>




