    {
      "name": "Four Collections ",  
      "settings": [
        {
            "type": "text",
            "id": "header_text",
            "label": "Title",
            "default": "Products"
        },
        {
            "type": "text",
            "id": "sub_text",
            "label": "Title",
            "default": "The most outstanding selections for men and women. Outstanding styles made for all."
    
        },
        {
          "type": "color",
          "id": "header_color",
          "label": "Header Color",
          "default": "#212529"
    
        },
        {
            "type": "color",
            "id": "sub_color",
            "label": "Sub Color",
            "default": "#212529"
      
          },
        {
          "type": "collection",
          "id": "collection1",
          "label": "Collection 1",
          "info": "Choose a collection"
       },
        {
          "type": "collection",
          "id": "collection2",
