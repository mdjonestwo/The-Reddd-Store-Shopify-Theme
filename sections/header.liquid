        max-width: {{ section.settings.logo_max_width | escape }}px;
      }
    {% endif %}

    {% if section.settings.align_logo == 'left' %}
      .site-header__logo-image {
        margin: 0;
      }
    {% endif %}


      mobile-menu i{
        color: {{section.setttings.font_color}}
      }

      mobile-menu a{
        color: {{section.setttings.font_color}}  
      }

      .mobile-menu hr{
        border: 1px solid {{section.setttings.font_color}};
      }

  </style>
